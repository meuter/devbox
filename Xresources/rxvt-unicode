! setup scrolling
URxvt*saveLines:            50000
URxvt*scrollBar:            false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyOutput:      false
URxvt*scrollTtyKeypress:    true

! open links with chrome
URxvt.perl-ext-common:      default,matcher,font-size
URxvt.matcher.button:       C1
URxvt.urlLauncher:          google-chrome

! setup font
URxvt*font:                 xft:NotoMono Nerd Font Mono:style=book:size=11
URxvt*boldFont:             xft:NotoMono Nerd Font Mono:style=bold:size=11
URxvt*italicFont:           xft:NotoMono Nerd Font Mono:style=italic:size=11
URxvt*boldItalicFont:       xft:NotoMono Nerd Font Mono:style=bolditalic:size=11

! Improved font rendering
Xft.autohint:               0
Xft.dpi:                    96
Xft.antialias:              1
Xft.hinting:                1
Xft.hintstyle:              hintsinone
Xft.lcdfilter:              lcddefault
Xft.rgba:                   none

! Display
! URxvt*transparent:          true
! URxvt*shading:              30
URxvt.depth:                32
URxvt.internalBorder:       0

! setup control left/right/backspace
URxvt*keysym.Control-Left:          \033[1;5D
URxvt*keysym.Control-Right:         \033[1;5C
URxvt*keysym.Control-BackSpace:     \027

! paste
URxvt*iso14755: false
URxvt*iso14755_52: false
URxvt*keysym.Shift-Control-V: eval:paste_clipboard
URxvt*keysym.Shift-Control-C: eval:selection_to_clipboard

! Increase/Decrease font size Ctrl+'+'/'-'
URxvt.keysym.Control-0xffab: perl:font-size:increase
URxvt.keysym.Control-0xffad: perl:font-size:decrease

